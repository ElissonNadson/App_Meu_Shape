<?xml version="1.0" encoding="utf-8"?>
<!-- Auto layout, variables, and unit scale are not yet supported -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tela_1_logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07A4DA"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <View
        android:id="@+id/logo"
        android:layout_width="253dp"
        android:layout_height="191dp"
        android:background="@drawable/logo"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/fitstrides"
        android:layout_width="327dp"
        android:layout_height="72dp"
        android:layout_marginTop="@+id/logo"
        android:fontFamily="@font/"
        android:text="@string/fitstrides"
        android:textAppearance="@style/fitstrides"
        />

    <TextView
        android:id="@+id/o_parceiro_"
        android:layout_width="239dp"
        android:layout_height="15dp"
        android:fontFamily="@font/montserrat-bold"
        android:text="@string/o_parceiro_"
        android:textAppearance="@style/o_parceiro_"
        android:textStyle="bold"/>
</LinearLayout>